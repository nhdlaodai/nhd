function add (x, y) {
    return x + y;
}

function minus  (x, y) {
    return x - y;
}

function times  (x, y) {
    return x * y;
}

function divi(x, y) {
    if (y == 0) {
         console.log("Error");
    } else
    return x / y;
}

var operations = {
    '+': add,
    '-': minus,
    '*': times,
    '/': divi
}

var calculate = function(x, y, operation){
   return operations[operation](x, y);
}

console.log(calculate(2,4, '*'));




